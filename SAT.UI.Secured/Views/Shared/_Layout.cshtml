<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/layout.css" rel="stylesheet" type="text/css" media="all">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <title>Silverquill Campus</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

</head>
<body>
    <div class="container body-content">
        <div class="wrapper row0">
            <header id="header" class="hoc clear">
                <div id="logo">
                    <h1>@Html.ActionLink("Silverquill", "Index", "Home")</h1>

                    <img src="~/Content/Images/MagicSymbols/orzhovResize (1).png" />
                </div>
            </header>
        </div>

        <div class="wrapper row1">
            <div id="LoginPartial" class="clear">
                @Html.Partial("_LoginPartial")
            </div>
            <div id="mainav" class="hoc">
                <ul class="text-center">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    @if (User.IsInRole("Admin") || User.IsInRole("Scheduling"))
                    {
                        <li>@Html.ActionLink("Enrollments", "Index", "Enrollments")</li>
                        <li>@Html.ActionLink("Scheduled Classes", "Index", "ScheduledClasses")</li>
                        <li>
                            <a class="drop" href="#">Students</a>
                            <ul>
                                <li>@Html.ActionLink("Students", "Index", "Students")</li>
                                <li>@Html.ActionLink("Student Status", "Index", "StudentStatus")</li>
                            </ul>
                        </li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Roles", "Index", "RolesAdmin")</li>
                        <li>@Html.ActionLink("Users", "Index", "UsersAdmin")</li>
                        <li>@Html.ActionLink("Course", "Index", "Cours")</li>
                    }
                </ul>
            </div>
        </div>

        @RenderBody()
        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.backtotop.js"></script>
    <script src="~/Scripts/jquery.mobilemenu.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
